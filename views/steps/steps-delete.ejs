
<%- include ('../system/header') %>

<h1>Lépés rekord törlése</h1>
<%- include ('../system/message') %>

<div class="alert alert-warning mt-3">
  Biztosan törlöd ezt a rekordot?
  <div class="mt-2">
    <strong>Dátum:</strong> <%= item.date %><br>
    <strong>Lépésszám:</strong> <%= item.steps %>
  </div>
</div>

<form method="POST" action="/steps/delete/<%= item.id %>">
  <button class="btn btn-danger" type="submit">Törlés</button>
  <a class="btn btn-outline-secondary" href="/steps">Mégse</a>
</form>

<%- include ('../system/footer') %>
