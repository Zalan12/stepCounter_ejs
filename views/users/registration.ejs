<%- include('../system/header') %>

    <div class="col-lg-6 offset-lg-3">
        <%- include('../system/message') %>

        <h1 class="my-3">Regisztráció</h1>

        <form action="/users/registration" method="post">


            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="name" placeholder="" name="name" value="<%= session.body ? session.body.name : '' %>">
                <label for="name">Felhasználónév</label>
            </div>

            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="email" placeholder="" name="email" value="<%= session.body ? session.body.email : '' %>">
                <label for="email">Email cím</label>
            </div>
            <div class="form-floating mb-3">
                <input type="password" class="form-control" id="password" placeholder="" name="password" value="<%= session.body ? session.body.password : '' %>">
                <label for="password" >Jelszó</label>
            </div>

            <div class="form-floating mb-3">
                <input type="password" class="form-control" id="confirm" placeholder="" name="confirm" value="<%= session.body ? session.body.confirm : '' %>">
                <label for="confirm">Jelszó megerősítése</label>
            </div>

            <input type="submit" value="Regisztráció" name="registration" class="btn btn-outline-primary mt-3">


        </form>

    </div>
    <%- include('../system/footer') %>